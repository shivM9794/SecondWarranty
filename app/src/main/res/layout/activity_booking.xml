            android:layout_weight="75"
            android:fontFamily="@font/open_sans_semibold"
            android:text="My Booking"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

